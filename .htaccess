RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ ./index.html [L,QSA]

RewriteRule .* - [env=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

<IfModule mod_headers.c>
  <!-- # --- SEGURIDAD ---
  # Content-Security-Policy ajustada para permitir API externa, Dropbox, ImgBB y Google Fonts
  Header add Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; img-src 'self' data: https://*.dropboxusercontent.com https://i.ibb.co; connect-src 'self' https://pruebs.venexporta-rn.com https://venexporta-rn.com https://api.dropboxapi.com https://content.dropboxapi.com https://api.imgbb.com; font-src 'self' data: https://fonts.gstatic.com;"
  Header set X-Frame-Options "DENY"
  Header set X-Content-Type-Options "nosniff" -->

  # --- CONTROL DE CACHÉ PARA SPA & PWA ---
  
  # 1. Archivos estáticos con Hash (Assets de Vite)
  # Estos archivos cambian de nombre cuando cambia su contenido, por lo que es seguro cachearlos "para siempre" (1 año).
  <FilesMatch "\.(css|js|jpg|jpeg|png|gif|ico|svg|woff|woff2|ttf|eot)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>

  # 2. Archivos Críticos (Nunca Cachear)
  # index.html: Punto de entrada, debe ser fresco para apuntar a los nuevos assets.
  # sw.js / manifest: Controlan la PWA, deben actualizarse inmediatamente.
  <FilesMatch "^(index\.html|sw\.js|registerSW\.js|workbox-.*\.js|manifest\.webmanifest|manifest\.json)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "0"
  </FilesMatch>
</IfModule>